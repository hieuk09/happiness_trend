<h1 class='question'><%= @question.prompt %></h1>

<div class='choices'>
  <span><%= image_tag 'sad_face.png', class: 'choice', data: { value: 1 } %></span>
  <span><%= image_tag 'straight_face.png', class: 'choice', data: { value: 2 } %></span>
  <span><%= image_tag 'happy_face.png', class: 'choice', data: { value: 3 } %></span>
</div>

<div class='detail'>
  <textarea rows=4 cols=50 placeholder='Please provide detail for your rating'></textarea>
</div>

<div class='action'>
  <button id='submit'>Submit</button>
</div>
